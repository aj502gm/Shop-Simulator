<UserControl x:Class="ShopSimAndresKarl.bugReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopSimAndresKarl"
             mc:Ignorable="d" Width="277" Height="323">
    <Grid Background="black">

        <TextBox x:Name="txbReport" Background="black" HorizontalAlignment="Left" Height="82" Margin="60,128,0,0" TextWrapping="Wrap" Text="Your Report Here" VerticalAlignment="Top" Width="146" Foreground="White" MouseDoubleClick="ingTexto"/>
        <StackPanel  HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="278" Margin="0,0,-6,0" Background="DodgerBlue" />
        <Button x:Name="btnEnvio" Background="black" Content="Send Report" HorizontalAlignment="Left" Margin="16,220,0,0" VerticalAlignment="Top" Width="233" Height="33" Foreground="White" Click="btnEnvio_Click" />
        <Label Foreground="white" FontSize="25" Content="What's wrong?" HorizontalAlignment="Left" Margin="54,76,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
