<UserControl x:Class="ShopSimAndresKarl.logInOLoQueSea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopSimAndresKarl"
             mc:Ignorable="d" 
             d:DesignHeight="293" d:DesignWidth="272">
    <Grid>
        <Label Content="User" Foreground="White" Margin="62,65,0,0"/>
        <TextBox x:Name="txbUser" Background="black" HorizontalAlignment="Left" Height="21" Margin="66,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Foreground="White" />
        <StackPanel  HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="278" Margin="0,0,-6,0" Background="DodgerBlue" />
        <Label Content="Password" Foreground="White" Margin="62,125,0,0"/>
        <PasswordBox x:Name="txbPass" Background="black" HorizontalAlignment="Left" Height="21" Margin="66,150,0,0" VerticalAlignment="Top" Width="148" Foreground="White" />
        <Button Background="black" Content="Let's go" HorizontalAlignment="Left" Margin="20,174,0,0"  Width="233" Height="33" Foreground="White" Click="Button_Click"/>

    </Grid>
</UserControl>
